
<Calculator>:
	txtinput:txtinput
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			size_hint_y: 0.2
			Label:
				text: 'Calculadora Diego, Evandro, Gravena e Vinicius ' 
				text_size: self.size
				italic: True
				color: 0,1,0
				bold: True

			Label:
				size_hint_x: 0.3
				text: 'ver 1.0'
				text_size: self.size
				italic: True
				color: 0,0,1
				bold: True

			

		BoxLayout:
			TextInput:
				id: txtinput
				hint_text: '0.0'
				font_size: 50
				readonly: True

		GridLayout:
			rows:3
			cols: 4
			size_hint_y: 1

			Button:
				text: 'C'
				on_release: root.ac_clear()

			Button:
				text: 'del'
				on_release: root.delete()

			Button:
				text: '%'
				on_release: root.percentage()

			ToggleButton:
				background_color: (0.5, 0.5, 1, 1)
				text: 'raiz'
				group: 'rad-sqrt'
				on_release: root.raiz()

			Button:
				text: 'pi'
				on_release: root.pi()

			Button:
				text: 'exp'
				on_release: root.txtinput.text += '**'

			ToggleButton:
				text: 'Rad'
				group: 'rad-deg'
				on_release: root.rad()

			ToggleButton:
				background_color: (0.5, 0.5, 1, 1)
				text: 'Deg'
				group: 'rad-deg'
				on_release: root.deg()

		GridLayout:
			cols: 4
			rows: 3
			size_hint_y: 1.5
			Button:
				text: '7'
				on_release: root.txtinput.text += '7'

			Button:
				text: '8'
				on_release: root.txtinput.text += '8'

			Button:
				text: '9'
				on_release: root.txtinput.text += '9'

			Button:
				background_color: (0.5, 0.5, 1, 1)
				text: '/'
				on_release: root.txtinput.text += '/'

			Button:
				text: '4'
				on_release: root.txtinput.text += '4'

			Button:
				text: '5'
				on_release: root.txtinput.text += '5'

			Button:
				text: '6'
				on_release: root.txtinput.text += '6'

			Button:
				background_color: (0.5, 0.5, 1, 1)
				text: 'X'
				on_release: root.txtinput.text += '*'

			Button:
				text: '1'
				on_release: root.txtinput.text += '1'

			Button:
				text: '2'
				on_release: root.txtinput.text += '2'

			Button:
				text: '3'
				on_release: root.txtinput.text += '3'

			Button:
				background_color: (0.5, 0.5, 1, 1)
				text: '-'
				on_release: root.txtinput.text += '-'

		BoxLayout:
			GridLayout:
				rows: 2
				size_hint_x: 0.75
				size_hint_y: 1
				

				BoxLayout:
					orientation: 'horizontal'
					Button:
						text: '.'
						on_release: root.dot()

					Button:
						text: '0'
						on_release: root.txtinput.text += '0'

					BoxLayout:
						Button:
							text: '('
							on_release: root.txtinput.text += '('

						Button:
							text: ')'
							on_release: root.txtinput.text += ')'



				
			BoxLayout:
				size_hint_x: 0.25
				orientation: 'vertical'
				Button:
					background_color: (0.5, 0.5, 1, 1)
					text: '+'
					on_release: root.txtinput.text += '+'
				
				Button:
					background_color: (0.5, 0.5, 1, 1)
					text: '='
					on_release: root.calculate()
				
				